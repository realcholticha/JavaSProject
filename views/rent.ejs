<!DOCTYPE html>
<html>
    <head>
        <title> Reserve </title>
        <link rel="stylesheet" href="style.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.9/dist/sweetalert2.all.min.js" integrity="sha256-2iFgzMziCroYT0IkthOS8usgi+KXxOiA5tvNCMyh984=" crossorigin="anonymous"></script>
    </head>
    <body>

        <nav>
            <div class="content-left"> 
            <a href="/checkroom" ><div class="logo"> หน้าหลัก </div></a>
            <a href="#" ><div class="logo"> ตรวจสอบห้อง </div></a>

        </div>
            <ul>
                <li><a href="/login"> ออกจากระบบ </a></li>
            </ul>
        </nav>
        <div class="margin-1">

            <div class="container content-1">
                <h3>ลงทะเบียนจองห้อง</h3>
            </div>

        <div class="container content-1">
            <div class="block-1">
                <h3>SPIT-0<%= idRoom+1 %></h3>
            </div>
        </div>

        <form method="post" action="/rent">

            <input name="roomId" value="<%=idRoom%>"type="text" style="display: none;">

            <div class="container content-1 ">
                <input name="date" type="date" placeholder="Input Date">
            </div>
    
            <div class="container content-1 ">
                <input name="time_start" type="time" placeholder="Input Time">
                <input name="time_end" type="time" placeholder="Input Time">
            </div>
    
            <input type="submit" style="display: none;" id="btnSubmitForm">

            <div class="container content">
                <p><div id="btnAfterSubmit" class="box red-box">ยืนยัน</div></p>
                <p><a href="/checkroom" class="box red-box">ยกเลิก</a></p> 
            </div>
        </form>

    </body>
    <footer>

    </footer>

</html>



<script>

    document.querySelector('#btnAfterSubmit').addEventListener('click', () => {
        Swal.fire({
            title: 'Are you sure?',
            text: "You need a booked this room?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Booked!',
                    'Good luck!.',
                    'success'
                )
                setTimeout(() => {
                    document.querySelector('#btnSubmitForm').click();
                }, 1500);
            }
        })
    });

</script>